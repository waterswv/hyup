<h3>Create Listing</h3>

<div class="row">
  <%= form_for @listing do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :title %>
        <%= label_tag 'title' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
      <%= f.text_field :rent %>
      <%= label_tag 'Rent' %>
    </div>
      <div class="input-field col s6">
        <%= f.text_field :available_date %>
          <%= label_tag 'Available Date' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :address %>
        <%= label_tag 'Address' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :description, :class => "materialize-textarea" %>
        <%= label_tag 'Description' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s4">
        <%= f.text_field :contact_phone %>
        <%= label_tag 'Contact Phone' %>
      </div>
      <div class="input-field col s4">
        <%= f.email_field :contact_email %>
        <%= label_tag 'Contact Email' %>
      </div>
      <div class="input-field col s4">
        <div class="file-field input-field">
          <div class="btn">
            <span>Upload Image</span>
            <%= f.file_field :image %>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :city %>
        <%= label_tag 'City' %>
      </div>
    </div>

    <button class="btn waves-effect waves-light" type="submit" name="action"><%= f.submit "Create Listing" %>
      <i class="material-icons right">send</i>
    </button>
  <% end %>

</div>
